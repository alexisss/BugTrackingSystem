@model IEnumerable<Exam.Web.Models.TicketViewModel>

@{
    ViewBag.Title = "Most commented tickets";  
}

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
           <div><strong>Category: </strong>@ticket.Category</div>
           <div><strong>Author: </strong>@ticket.Author</div>
           <div>@ticket.CommentsCount comment(s)</div>
            <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.Id })">More Details</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
            @:</div>
        @:<div class="row-fluid">
        }
    }
</div>

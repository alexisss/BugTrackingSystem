@model Exam.Web.Models.DetailedTicketViewModel

@{
    ViewBag.Title = @Model.Title;
}

<h2>@ViewBag.Title</h2>

<div class="row-fluid">
    <div class="span4">
        <h3><strong>Category: </strong>@Model.Category</h3>
        <div><strong>Author:</strong> @Model.Author</div>
        <div><strong>Priority:</strong> @Model.Priority</div>        
    </div>
    <div class="span4">
        @if (Model.ScreenShotUrl != null)
        {
            <img style="width:350px; height:250px;"src="@Model.ScreenShotUrl" alt="@Model.Title" />
        }
    </div>
    <div class="span4">
        @if (Model.Description != null)
        {
            <div><strong>Description:</strong> @Model.Description</div>
        }       
    </div>
</div>

<br/>
<br />
<br />

<div id="Comments">
    @foreach (var comment in Model.Comments)
    {
        @Html.Partial("_CommentPartial", comment)
    }
</div>

@if (User.Identity.IsAuthenticated)
{
    using (Ajax.BeginForm("PostComment", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.InsertAfter, UpdateTargetId = "Comments" }))
    {
        @Html.Hidden("TicketId", Model.Id)
        @Html.TextArea("description")
        @Html.AntiForgeryToken()
        <input type="submit" value="Submit comment" />
    }
}

